<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item
        android:state_pressed="true">
        <shape
            android:shape="rectangle">

            <stroke
                android:width="1dip"
                android:color="@android:color/transparent"/>
            <gradient
                android:angle="-90"
                android:startColor="#20ff4d"
                android:endColor="#20ff4d"/>

        </shape>
    </item>
    <item
        android:state_focused="true"
        >
        <shape
            android:shape="rectangle">
            <corners
                android:radius="0dp"/>
            <stroke
                android:width="1dip"
                android:color="@android:color/transparent"/>

            <solid android:color="#ecf0f1"/>

        </shape>


    </item>
    <item >
        <shape
            android:shape="rectangle">
            <corners
                android:radius="0dp"/>
            <stroke
                android:width="1dip"
                android:color="@android:color/transparent"/>

            <solid android:color="#9D001A"/>

        </shape>
    </item>
</selector>

